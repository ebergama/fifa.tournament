    <div class="panel-heading">
    </div>
    <div class="panel-body">
        <table>
            <tbody>
            <tr>
                <td><img ng-src="{{thePlayer.image}}" class="img-circle img-circle-large" ng-click="goTo(undefined) "></td>
                <td>
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>Nombre</td>
                            <td>{{thePlayer.firstName}}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{thePlayer.email}}</td>
                        </tr>
                        <tr>
                            <td>PJ</td>
                            <td>{{thePlayer.matchesPlayed}}</td>
                        </tr>
                        <tr>
                            <td>PG</td>
                            <td>{{thePlayer.matchesWon}}</td>
                        </tr>
                        <tr>
                            <td>PE</td>
                            <td>{{thePlayer.matchesTied}}</td>
                        </tr>
                        <tr>
                            <td>PP</td>
                            <td>{{thePlayer.matchesLost}}</td>
                        </tr>
                        <tr>
                            <td>GF</td>
